epsg_crs <- 4326
# Get spawn data
get_spawn <- function(fn) {
  # Check if the data exists locally
  is_data <- fn %in% list.files(here(tr_path, cache_path))
  # If the data is present
  if (is_data) {
    # Load the data
    dat <- read_csv(file = here(tr_path, cache_path, fn), col_types = cols())
  } else { # End if data, otherwise download it (takes a while)
    # Grab the data and save it
    dat <- read_csv(
      file = paste(
        "https://pacgis01.dfo-mpo.gc.ca", "FGPPublic",
        "Pacific_Herring_Spawn_Index_Data",
        "Pacific_herring_spawn_index_data_EN.csv",
        sep = "/"
      ),
      col_types = cols()
    ) %>%
      write_csv(file = here(tr_path, cache_path, fn))
  } # End if no data
  # Wrangle the data
  res <- dat %>%
    group_by(
      Region, Year, StatisticalArea, Section, LocationCode, LocationName,
      Longitude, Latitude, Surface, Macrocystis, Understory
    ) %>%
    summarise(
      Surface = sum(Surface, na.rm = TRUE),
      Macrocystis = sum(Macrocystis, na.rm = TRUE),
      Understory = sum(Understory, na.rm = TRUE)
    ) %>%
    ungroup() %>%
    replace_na(replace = list(Surface = 0, Macrocystis = 0, Understory = 0)) %>%
    mutate(
      StatisticalArea = formatC(StatisticalArea, width = 2, flag = "0"),
      Section = formatC(Section, width = 3, flag = "0"),
      Index = Surface + Macrocystis + Understory
    ) %>%
    select(
      Region, Year, StatisticalArea, Section, LocationCode, LocationName,
      Longitude, Latitude, Index
    )
  # Return the spawn data
  res
} # End get_spawn function

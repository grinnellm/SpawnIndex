# Get ratio of x to y
get_ext_ratio <- function(dat) {
  # Get range
  ext <- dat %>%
    st_transform(crs = 32609) %>%
    st_bbox()
  # Calculate the ratio
  res <- abs(ext$ymax - ext$ymin) / abs(ext$xmax - ext$xmin)
  # Return the ratio
  res
} # End get_ext_ratio function
